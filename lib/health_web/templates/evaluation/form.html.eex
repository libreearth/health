<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <!--<%= label f, :uuid %>
  <%= text_input f, :uuid %>
  <%= error_tag f, :uuid %>-->

  <%= label f, :date_of_birth %>
  <%= date_select f, :date_of_birth %>
  <%= error_tag f, :date_of_birth %>

  <%= text_input f, :h3id, [hidden: true]%>

  <%= label f, "How are you feeling today?" %>
  <%= error_tag f, :happiness %>
  <input type="checkbox" name="evaluation[happiness]" value=5>Happy<br>      
  <input type="checkbox" name="evaluation[happiness]" value=1>Sad<br>      
  <input type="checkbox" name="evaluation[happiness]" value=2>Depressed<br>
  <input type="checkbox" name="evaluation[happiness" value=3>Tired<br>    
  <input type="checkbox" name="evaluation[happiness]" value=4>Lonely<br>  
  <input type="checkbox" name="evaluation[happiness]" value=0>Angry<br>    

  <%= label f, "Do you smoke?" %>
  <%= checkbox f, :smoker, [checked_value: 1, unchecked_value: 0]%>
  <%= error_tag f, :smoker %>

  <%= label f, "Do you drink alcohol?" %>
  <%= checkbox f, :alcohol, [checked_value: 1, unchecked_value: 0]%>
  <%= error_tag f, :alcohol %>

  <%= error_tag f, :symptoms %>
  <legend>Any current symptoms?</legend>      
  <input type="checkbox" name="evaluation[symptoms]" value="Fever">Fever<br>      
  <input type="checkbox" name="evaluation[symptoms]" value="Tiredness">Tiredness<br>      
  <input type="checkbox" name="evaluation[symptoms]" value="Dry cough">Dry cough<br>
  <input type="checkbox" name="evaluation[symptoms]" value="Sore throat">Sore throat<br>    
  <input type="checkbox" name="evaluation[symptoms]" value="Diarrhea">Diarrhea<br>    
  <input type="checkbox" name="evaluation[symptoms]" value="Nausea">Nausea<br>    
  <input type="checkbox" name="evaluation[symptoms]" value="Runny nose">Runny nose<br>        
  <input type="checkbox" name="evaluation[symptoms]" value="Cough">Cough<br>  
  <input type="checkbox" name="evaluation[symptoms]" value="Shortness of breath">Shortness of breath<br>  
  <input type="checkbox" name="evaluation[symptoms]" value="Trouble breathing">Trouble breathing<br>  
  <input type="checkbox" name="evaluation[symptoms]" value="Persistent Pain or pressure in chest">Persistent Pain or pressure in chest<br>  
  <input type="checkbox" name="evaluation[symptoms]" value="New confusion or inability to arouse">New confusion or inability to arouse<br>  
  <input type="checkbox" name="evaluation[symptoms]" value="Bluish lips of face">Bluish lips of face<br>  

  <%= error_tag f, :previous_conditions %>
  <legend>Do you have any existing conditions?:</legend>      
  <input type="checkbox" name="evaluation[previous_conditions]" value="Cardiac disease">Cardiac disease<br>      
  <input type="checkbox" name="evaluation[previous_conditions]" value="Hypertension">Hypertension<br>      
  <input type="checkbox" name="evaluation[previous_conditions]" value="Lung disease such as asthma, pneumonia">Lung disease such as asthma, pneumonia<br>
  <input type="checkbox" name="evaluation[previous_conditions]" value="Diabetes">Diabetes<br>    
  <input type="checkbox" name="evaluation[previous_conditions]" value="Haemoglobinopathies">Haemoglobinopathies<br>    
  <input type="checkbox" name="evaluation[previous_conditions]" value="Liver disease">Liver disease<br>    
  <input type="checkbox" name="evaluation[previous_conditions]" value="Neurological disorder">Neurological disorder<br>        
  <input type="checkbox" name="evaluation[previous_conditions]" value="Obesity">Obesity<br>  
  <input type="checkbox" name="evaluation[previous_conditions]" value="SRenal disease">Renal disease<br>  

  <%= label f, "Have you been in contact in the past 3 weeks with someone who was sick with any of those symptoms?" %>
  <%= checkbox f, :previous_contact_with_sick, [checked_value: 1, unchecked_value: 0]%>
  <%= error_tag f, :previous_contact_with_sick %>

  <%= label f, "Have you travelled to any of those countries in the last month (China, Italy, USA, France, Spain, Singapore, South Korea, Japan. Continent EU, America, Africa, Asia, Australasia)" %>
  <%= checkbox f, :travel_to_risk, [checked_value: 1, unchecked_value: 0]%>
  <%= error_tag f, :travel_to_risk %>

  <%= label f, "Do you work?" %>
  <%= checkbox f, :do_you_work, [checked_value: 1, unchecked_value: 0]%>
  <%= error_tag f, :do_you_work %>

  <%= label f, "Are you doing any of the following regularly ? (Keeping a distance of 2 mÃ¨tres with people, washing hands regularly, covering your nose with mask, showering after going outside)" %>
  <%= number_input f, :taking_precautions %>
  <%= error_tag f, :taking_precautions %>

  <%= label f, "How many people live in your house?" %>
  <%= number_input f, :household_number%>
  <%= error_tag f, :household_number %>

  <%= label f, "Do you do Sports?" %>
  <%= checkbox f, :sports, [checked_value: 1, unchecked_value: 0]%>
  <%= error_tag f, :sports %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
